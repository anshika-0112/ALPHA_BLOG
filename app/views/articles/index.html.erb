<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created By</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%=article.title%></td>
            <td><%=article.descrition%></td>
            <td><%=article.user.username if article.user%></td>
            <td><%= link_to "Show", article_path(article)%></td>
            <td><%= link_to "Edit", edit_article_path(article)%></td>
            <td><%= link_to "Destroy", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
        </tr>
        <%end%>

    </tbody>
</table>
<%= link_to "Create Article", path=new_article_path %>