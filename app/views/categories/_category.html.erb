<% @categories.each do |category| %>
    <div class="container" id="article-card">
        <div class="card text-center">
            <div class="card-header">
            </div>
            <div class="card-body">
                <h5 class="card-title"><%=link_to category.name, category_path(category)%></h5>
                <%= link_to "Show", category_path(category),class:"btn btn-primary"%>

            </div>
            <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago</small>
            </div>
        </div>
    </div>
<% end%>